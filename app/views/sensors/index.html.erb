<h1>Listing sensors</h1>
<div id="tabla3">
<table>
  <thead>
    <tr>
      <th class="th">Concentrador</th>
      <th class="th">Nombre</th>
      <th class="th">Descripcion</th>
      <th class="th">Estado</th>
      <th class="th">Parametro</th>
      <th class="th">Valor</th>
      <th class="th">Uds</th>
      <th class="th"></th>
      <th class="th"></th>
      <th class="th"></th>
      <th class="th"></th>
    </tr>
  </thead>

  <tbody>
    <% @sensors.each do |sensor| %>
      <tr>
        <td><%= sensor.concentrador.nombre %></td>
        <td><%= sensor.nombre %></td>
        <td><%= sensor.descripcion %></td>
        <td><%= sensor.estado %></td>
        <td><%= sensor.parametro %></td>
        <td><%= sensor.valor %></td>
        <td><%= sensor.uds %></td>
        <td><%= link_to 'Show', sensor %></td>
        <td><%= link_to 'Edit', edit_sensor_path(sensor) %></td>
        <td><%= link_to 'Destroy', sensor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Medidas', mediciones_sensor_path(sensor) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

